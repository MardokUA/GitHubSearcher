<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RepositoryTitleInfo">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RepositoryOwnerTitleInfo">
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:minWidth">@dimen/search_element_min_title_width</item>
    </style>

    <style name="RepositoryOwnerValueInfo">
        <item name="android:textSize">@dimen/content_size</item>
        <item name="android:layout_marginStart">@dimen/search_element_margin</item>
        <item name="android:layout_marginTop">@dimen/search_element_margin</item>
    </style>

</resources>
