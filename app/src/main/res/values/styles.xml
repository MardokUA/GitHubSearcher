<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SearchButton">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="RepositoryTitleInfo">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="RepositoryOwnerTitleInfo">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:minWidth">@dimen/search_element_min_title_width</item>
    </style>

    <style name="RepositoryOwnerValueInfo">
        <item name="android:textSize">@dimen/content_size</item>
        <item name="android:layout_marginStart">@dimen/search_element_margin</item>
        <item name="android:layout_marginTop">@dimen/search_element_margin</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

</resources>
