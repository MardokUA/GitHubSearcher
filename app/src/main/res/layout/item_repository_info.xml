<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="120dp"
    app:cardCornerRadius="6dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp">

        <ImageView
            android:id="@+id/info_avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/info_repo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ololol"
            app:layout_constraintBottom_toBottomOf="info_avatar"
            app:layout_constraintLeft_toRightOf="@+id/info_avatar"
            app:layout_constraintTop_toTopOf="@+id/info_avatar" />

    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>